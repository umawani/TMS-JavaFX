<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.VBox?>	
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<VBox styleClass="background" prefHeight="300.0" prefWidth="600.0" spacing="50"
      xmlns:fx="http://javafx.com/fxml" fx:controller="main.controller.SessionController">

    <VBox styleClass="header" spacing="20">
        <ImageView>
            <image>
                <Image url="uts.png" />
            </image>
        </ImageView>
        <Label styleClass="h1">
            Tuition Management System
        </Label>
    </VBox>
    <VBox spacing="20">
        <HBox alignment="BOTTOM_RIGHT" >
            <Button styleClass="button" text="Login" onAction="#handleLogin"/>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT">
            <Button styleClass="button" text="Exit" onAction="#handleExit"/>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@tmsfx.css"/>
    </stylesheets>



    
    
</VBox>
